@import "font-awesome"
@import "nib"
global-reset()
nested-reset()
reset-html5()

@import "element"
@import "param"

@import "project"


@font-face  
    font-family 'Hammersmith One'
    font-style normal
    font-weight normal
    src local('Hammersmith One'), local('HammersmithOne'), url('../fonts/HammersmithOne.woff') format('woff')

@font-face
    font-family 'Droid Sans'
    font-style normal
    font-weight 400
    src local('Droid Sans'), local('DroidSans'), url('../fonts/DroidSans.woff') format('woff')

//
//  HEADER
//


#header-container  
    height 40px
    background  $blue
 

#header  
    width 960px
    height 40px
    margin 0 auto
    padding 0 20px
    
    
    a
        display block

    h1  
        float left

        height 40px
        line-height 40px
        color white
        font-size 150%
        font-family "Hammersmith One"
     

        

//
//  MAIN
//


#main-container  
    margin 0 auto
    padding-bottom 60px

#main  
    width 960px
    margin 0 auto
    //padding 0 20px
 

.hero
    background #F8F8F8
    padding 40px
    margin 40px 10px 20px
    font-size 200%
    color $blue
    border-radius 4px
    h2
        color $blue
        margin 20px 0
    p
        color $base

.main-block
    width 420px
    height 140px

    float left

    margin 20px 10px
    padding 20px
    border-radius 4px

    background #F8F8F8

    cursor pointer

    &:hover
        background #FCFCFF
        .main-chevron
            color $light
    h2
        color $blue
        margin 20px 0
    p
        color $base
        font-size 150%

.main-body
    float left
    width 380px
    height 140px

.main-chevron
    float left
    width 40px
    height 140px
    line-height 140px
    color #DDD
    font-size 300%


//
//  Account
//


#account
    float right
    width 130px

    i
        float left
        text-align center
        display inline-block
        width 30px

.account-label
    float left
    width 70px

    height 40px
    line-height 40px
    padding 0 10px
    color #EEE

#account-panel
    width 120px

    height 40px
    line-height 40px
    padding-left 10px
    color #EEE
    cursor pointer
    

    &:hover
    .active &
        cursor default
        background $base//darken($blue, 10%)

    &.unauthorized:hover
        background darken($blue, 20%)


#account-menu
    float left
    display none
    margin-top -1px
    i
        height 40px
    li
        height 40px
        line-height 40px
        padding-left 10px

        background $base //darken($blue, 10%)
        cursor pointer
        color #EEE
        &:hover
            background darken($blue, 10%)

    .active &
        display block

#signin-mask
    position absolute
    top 0
    left 0
    width 100%
    height 500%

    background rgba(0, 0, 0, 0.7)


#signin-box

    background url("/images/light_noise_diagonal.png")

    width 400px 
    height 230px

    padding 20px 40px
    margin 100px auto

    border-radius 4px

    box-shadow black 2px

    form
        width 400px
        div
            margin 20px 0

    [type='text'],
    [type='password']
        width 380px
        height 40px
        
        padding 5px 10px
        font-size 200%
        line-height 40px

        ditch()

    button
        width 400px
        height 50px

        color white
        background $blue


        padding 5px 10px
        font-size 150%
        line-height 40px

        &:hover
            background lighten($blue, 10%)

        &:active
            background $blue

//
//  API
//

.api


    font-family "Lucida Grande", "Lucida Grande Unicode", "Helvetica", sans-serif
    margin 20px
    h3
        font-size 200%
        padding 20px 0
        border-bottom 6px solid $blue

    h4
        height 40px
        line-height 40px
        margin 20px 0 10px
        font-weight bold
        font-size 150%

    h5
        margin 10px 0
        font-weight bold



    pre
        padding 10px 20px
        margin 10px 0
        color white
        background $blue

    p
        padding 0

    .api-request
        padding 10px 20px
        margin-bottom 20px
        display inline-block
        background $blue
        color white

    > section

        padding 20px 40px 40px
        background white


