@import "param"

//
//  Elements
//

html  
    overflow-y scroll 
    height 100%

body  
    color #282828
    background url("/images/light_noise_diagonal.png")
    font-family "Droid Sans", Helvetica, "LiHei Pro", "微軟正黑體", Arial, sans-serif
    height 100%
 

a  
    text-decoration none
    color inherit
    
p
    margin 20px 0
    padding 0 20px

input
    border none
    padding 0
    margin 0

button
    border 0
    background inherit
    box-shadow 1px 1px 5px rgba(0, 0, 0, 0.5)

    cursor pointer

menu
    padding 0
    margin 0
    border none
    list-style none

//
//  Header
//

h1
    color white
    font-size 150%

h2  
    font-size 200%
    font-weight bold
    
    color $blue
    
    margin 40px 0
    padding 0 20px


h3
    font-size 150%
    font-weight bold
    
    color $blue
    
    margin 20px 0
    padding 0 20px


