@import "param"

hget(hash, key)
    return pair[1] if pair[0] == key for pair in hash



//
//  Elements
//




html  
    overflow-y scroll 
    height 100%

body  
    color #282828
    background url("/images/light_noise_diagonal.png")
    font-family "Droid Sans", Helvetica, "LiHei Pro", "微軟正黑體", Arial, sans-serif
    height 100%
 

a  
    text-decoration none
    color inherit
    
p
    margin 20px 0
    padding 0 20px

input
    border none
    padding 5px
    margin 0

    font-size 150%
    
    ditch()

    border-radius 4px

    &.invalid
        background rgb(250, 200, 200)

button
    border 0
    background $blue
    border-radius 5px
    color white

    // background inherit
    // box-shadow 1px 1px 5px rgba(0, 0, 0, 0.5)

    cursor pointer


    &:hover
        background lighten($blue, 10%)

   

    &.pending
        background $base
        cursor wait

span
    &.hint
        color $dim

    &.invalid
        color darkred


menu
    padding 0
    margin 0
    border none
    list-style none

//
//  Header
//

h1
    color white
    font-size 150%

h2  
    font-size 200%
    font-weight bold
    
    color $blue
    
    margin 40px 0
    padding 0 20px


h3
    font-size 150%
    font-weight bold
    
    color $blue
    
    margin 20px 0
    padding 0 20px


