@import "param"

//
//  Elements
//

html  
    overflow-y scroll 

body  
    color #282828
    background #f0f0f0
    font-family "Droid Sans", Helvetica, "LiHei Pro", "微軟正黑體", Arial, sans-serif
 

a  
    text-decoration none
    color inherit
    
p
    margin 20px 0
    padding 0 20px

    

//
//  Header
//

h1
    color white
    font-size 150%

h2  
    font-size 200%
    font-weight bold
    
    color $blue
    
    margin 20px 0
    padding 0 20px
    
 
