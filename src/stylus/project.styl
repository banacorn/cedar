@import "element"
@import "param"

.project



#project-header

    width 100%
    height 80px
    clearfix()

    h2
        float left
        font-size 200%
        margin 0 
        line-height 80px
        text-shadow white 2px 2px 2px


    .sub
        float left
        height 80px
        margin 0
        padding 0

        color $base
        font-size 125% 
        line-height 90px

//
//  Breadcrumb
//

#project-breadcrumb
    height 40px
    background $blue//rgba(255, 255, 255, 0.3)
    color white

    ol
        padding-left 20px

    li
        float left
        height 40px
        line-height 40px
        padding 0 10px

        i
            width 20px

        &:after
            content "/"

.project-item
    margin 10px 0
    padding 20px
    border-radius 4px
    background #f8f8f8
    //background white
    color #787878
    cursor pointer
    h3  
        height 40px
        line-height 40px
        color #334455
        font-size 200%
        //font-family "Hammersmith One"
        i  
            height 40px
            line-height 40px
            padding-right 20px
            color #c8c8c8
         
        span  
            padding 0 20px
            font-size 50%
            color #a0a0a0
        
    &:hover
        background white


#project-file
    background white
    li
        //height 60px
        background white
        
        line-height 60px
        padding 0 20px
        color $base
        font-size 150%
        overflow hidden

    #project-nofile
        text-align center
        color $light





//
//  Entry
//

.entry-context
.entry-translation
    float left
    width 50%
