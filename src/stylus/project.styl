@import "element"
@import "param"


#project-header

    width 100%
    height 80px
    clearfix()

    h2
        float left
        font-size 200%
        margin 0 
        line-height 80px
        text-shadow white 2px 2px 2px


    .sub
        float left
        height 80px
        margin 0
        padding 0

        color $base
        font-size 125% 
        line-height 90px

//
//  Breadcrumb
//

#project-breadcrumb
    height 40px
    background $blue//rgba(255, 255, 255, 0.3)
    color white

    ol
        padding-left 20px

    li
        float left
        height 40px
        line-height 40px
        padding 0 10px

        i
            width 20px

        &:after
            content "/"

.project-item
    margin 10px 0
    padding 10px
    background $ghost
    color #787878
    cursor pointer
    h3  
        height 40px
        line-height 40px
        color #334455
        font-size 200%
        i  
            height 40px
            line-height 40px
            padding-right 20px
            color #c8c8c8
         
        span  
            padding 0 20px
            font-size 50%
            color #a0a0a0
        
    &:hover
        background white


#project-file
    background white
    > ol > li
        //height 60px
        background #F8F8F8
        
        line-height 60px
        padding 0 20px
        color $base
        font-size 150%
        overflow hidden


        a
            display block

        &:hover
            background white

    #project-nofile
        text-align center
        color $light





//
//  Entry
//

.entry
    > li
        padding 20px !important
        border-bottom 1px solid $ghost
        border-top 1px solid #E8E8E8

        line-height 40px


        &.expand
            background white !important


.entry-context
    float left
    width 380px
    padding 0 20px

    line-height 40px


.entry-translation
    float left
    width 380px
    padding 0 20px
    cursor text    
    line-height 40px

.entry-chevron
    float left
    width 80px
    height 40px
    line-height 40px
    color #DDD
    text-align center
    cursor pointer
    user-select none

    .expand &
    &:hover
        color $light    

.entry-detail-outer
    clear both
    display none
    padding-top 20px
    .expand &
        display block
.entry-detail
    display none
    width 880px
    padding 0 20px
    background $blue    
    color white
    font-size 75%

    .expand &
        display block

    ul
        overflow hidden
    li
        float left
        width 440px

        .entry-key
            font-weight bold
            color #889
